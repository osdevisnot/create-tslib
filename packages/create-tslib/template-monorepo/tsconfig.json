{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h", // change to React.createElement when using react
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": false, // enable the strict mode :)
    "target": "esnext"
  }
}
